<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

  <%= link_to "Entre com a sua conta Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %> ou
    <%= link_to "Entre com a sua conta Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-primary" %>
    <h2>Cadastrar-se</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'shared/devisemes' %>
        <div class="form-group">
          <%= f.text_field :fullname, autofocus: true, :class => "form-control", :placeholder => "Nome Completo", autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "EndereÃ§o Electronico" %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password,:class => "form-control", :placeholder => "Palavra Chave", autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Cadastrar-se", :class => "btn btn-primary" %>
        </div>
      <% end %>
</div>

