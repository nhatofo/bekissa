<div class="row">
  <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item">
          <%= link_to "Editar perfil", edit_user_registration_path, class: "sidebar-link-active"%>
        </li>
      </ul>
    <br>
    <%= link_to "Visualizar meu perfil", user_path(current_user.id), class: "btn btn-default wide"%>
  </div>
  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">Teu Perfil</div>
       <div class="panel-body">
         <div class="container">
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
               <%= render 'shared/devisemes' %>
               <div class="form-group">
                 <%= f.text_field :fullname,  :class => "form-control", :placeholder => "Nome Completo", autofocus: true %>
               </div>
               <div class="form-group">
                 <%= f.email_field :email,:class => "form-control", :placeholder => "EndereÃ§o Electronico", autofocus: true %>
               </div>
               <div class="form-group">
                 <%= f.text_field :phone_number,:class => "form-control", :placeholder => "Numero de Telefone", autofocus: true %>
               </div>
               <div class="form-group">
                 <%= f.text_area :description,rows:5, cols:25, :class => "form-control", :placeholder => "Descricao", autofocus: true %>
               </div>
               <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                   <div>Neste momento esperando a confirmacao de: <%= resource.unconfirmed_email %></div>
               <% end %>

               <div class="form-group">
                 <%= f.password_field :password, :class => "form-control", :placeholder => "Nova palavra chave (deixe em branco se nao pretende trocar)", autocomplete: "off" %>
               </div>

               <div class="form-group">
                 <%= f.password_field :password_confirmation,:class => "form-control", :placeholder => "Confirmar palavra chave", autocomplete: "off"  %>
               </div>

               <div class="form-group">
                 <%= f.password_field :current_password, :class => "form-control", :placeholder => "Digite a tua atual palavra chave para confirmar a troca", autocomplete: "off" %>
               </div>

               <div class="actions">
                 <%= f.submit "Salvar", :class => "btn btn-primary" %>
             <% end %>
             </div>
            </div>
           </div>
         </div>
        </div>
      </div>



