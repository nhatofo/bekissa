<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

      <h4>Trocar a palavra chave</h4>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'shared/devisemes' %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "Insira nos espacos abaixo a nova palavra chave." %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres no minimo)</em><br />
          <% end %>
          <%= f.password_field :password,:class => "form-control", :placeholder => "Palavra Chave", autofocus: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation,:class => "form-control", :placeholder => "Palavra Chave", autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Mudar a minha palavra chave", :class => "btn btn-primary" %>
        </div>
      <% end %>

   </div>
</div>