<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
     <%= link_to "Entre com a tua conta Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %> ou
     <%= link_to "Entre com a tua conta Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-primary" %>
     
     <h2>Entrar</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "EndereÃ§o Electronico" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Palavra Chave" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %> Lembre-me
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Entrar", :class => "btn btn-primary" %>
            <%= link_to "Esqueci-me a Palavra Chave", new_user_password_path, :class => "btn btn-primary" %>
          </div>
        <% end %>

  </div>
</div>
