     <h4>Entrar</h4>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "EndereÃ§o Electronico" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Palavra Chave" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
               <div class="row">
                   <%= f.check_box :remember_me %><span class="lembrar" >Lembre-me</span>
               </div>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Entrar", :class => "btn btn-primary" %>
            <%= link_to "Esqueci-me a Palavra Chave", new_user_password_path, :class => "btn btn-primary" %>
          </div>
        <% end %>

  </div>
